{
  "name": "mevn-2",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "server": "nodemon server.js --ignore 'client/' ",
    "client": "npm run serve --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "node server.js",
    "build": "npm install --prefix client && npm run build --prefix client",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --headless --browser chrome --config video=false",
    "cypress:test": "start-server-and-test start http://localhost:8080 cypress:run",
    "test": "npx cypress install && npm run cypress:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.9.20",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "cypress": "^4.9.0",
    "nodemon": "^2.0.4",
    "start-server-and-test": "^1.11.0"
  }
}
